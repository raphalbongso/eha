# =============================================================================
# EHA — Email Helper Agent — Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values.
# NEVER commit .env to version control.

# --- App ---
APP_ENV=development
DEBUG=true

# --- Database ---
DATABASE_URL=postgresql+asyncpg://eha:eha_dev@localhost:5432/eha

# --- Redis ---
REDIS_URL=redis://localhost:6379/0

# --- JWT ---
# For development, HS256 with a secret key is fine.
# For production, use RS256 with proper key pair.
JWT_PRIVATE_KEY=change-this-to-a-long-random-string
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_TTL_MINUTES=15
JWT_REFRESH_TOKEN_TTL_DAYS=7

# --- Google OAuth ---
# Create credentials at https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/v1/auth/google/callback

# --- Google Pub/Sub (for Gmail push) ---
# Create a topic at https://console.cloud.google.com/cloudpubsub
GOOGLE_PUBSUB_TOPIC=projects/your-project/topics/gmail-push
GOOGLE_PUBSUB_VERIFICATION_TOKEN=your-verification-token

# --- Encryption ---
# Generate with: python -c "import nacl.utils, base64; print(base64.b64encode(nacl.utils.random(32)).decode())"
ENCRYPTION_KEY=

# --- AI Provider ---
AI_PROVIDER=openai
OPENAI_API_KEY=sk-your-openai-key
OPENAI_MODEL=gpt-4o
# ANTHROPIC_API_KEY=sk-ant-your-key
# ANTHROPIC_MODEL=claude-sonnet-4-5-20250929

# --- Push Notifications ---
# FCM: Path to Firebase service account JSON
FCM_CREDENTIALS_JSON=
# APNs: iOS push notification credentials
APNS_KEY_PATH=
APNS_KEY_ID=
APNS_TEAM_ID=
APNS_BUNDLE_ID=com.eha.app

# --- Rate Limiting ---
RATE_LIMIT_PER_MINUTE=100

# --- Celery ---
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# --- CORS ---
ALLOWED_ORIGINS=http://localhost:19006,http://localhost:8081

# --- v2: Google Maps (travel-time calculations) ---
GOOGLE_MAPS_API_KEY=
